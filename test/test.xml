tests:
  # Основной сценарий - Запись на ТО
  - name: "Успешная запись на ТО"
    steps:
      - request: "хочу записаться на ТО"
        state: "collectData"  # Бот начинает собирать данные
        responseContains: "Пожалуйста, укажите марку вашего автомобиля"

      - request: "Шкода"
        state: "collectData"
        responseContains: "Укажите ваше имя и фамилию"

      - request: "Иван Иванов"
        state: "collectData"
        responseContains: "Укажите ваш номер телефона"

      - request: "79991234567"
        state: "confirmData"
        responseContains: "Оформляю заявку на техобслуживание на следующие данные: Иван Иванов, 79991234567, Шкода"

  # Сценарий: Отмена записи при длинном запросе
  - name: "Отмена записи на ТО при слишком длинном запросе"
    steps:
      - request: "хочу записаться на техобслуживание моего автомобиля, который был куплен в 2020 году и пробег у него уже 15000 км"
        state: "cancel"  # Бот отменяет запрос
        responseContains: "Ваш запрос слишком длинный. Попробуйте ещё раз."

  # Сценарий: Вопрос-ответ о стоимости техобслуживания
  - name: "Вопрос о стоимости техобслуживания"
    steps:
      - request: "Сколько стоит техобслуживание?"
        state: "pricingInfo"  # Бот отвечает на вопрос о стоимости ТО
        responseContains: "Стоимость обслуживания можно рассчитать по ссылке"

  # Сценарий: График технического обслуживания
  - name: "График технического обслуживания"
    steps:
      - request: "Когда делать ТО?"
        state: "maintenanceSchedule"  # Бот отвечает на вопрос о графике ТО
        responseContains: "График технического обслуживания можно узнать по ссылке"

  # Сценарий: Вопрос о времени выполнения ТО
  - name: "Сколько по времени занимает ТО"
    steps:
      - request: "Сколько времени занимает ТО?"
        state: "timingInfo"  # Бот даёт информацию о длительности ТО
        responseContains: "В среднем техническое обслуживание занимает 2 часа"

  # Сценарий: План работ при ТО
  - name: "Что входит в плановое ТО?"
    steps:
      - request: "Что входит в ТО?"
        state: "maintenancePlan"  # Бот даёт информацию о плане работ
        responseContains: "План работ технического обслуживания можно узнать по ссылке"

  # Общекоммуникативный сценарий: Приветствие
  - name: "Приветствие"
    steps:
      - request: "Привет"
        state: "greeting"  # Бот отвечает на приветствие
        responseContains: "Здравствуйте! Как я могу помочь?"

  # Общекоммуникативный сценарий: Как дела?
  - name: "Как дела у бота?"
    steps:
      - request: "Как дела?"
        state: "smallTalk"  # Бот поддерживает разговор
        responseContains: "Отлично! А у вас?"

  # Общекоммуникативный сценарий: Знакомство
  - name: "Как зовут бота?"
    steps:
      - request: "Как тебя зовут?"
        state: "introduction"
        responseContains: "Меня зовут Вася. А как вас зовут?"
